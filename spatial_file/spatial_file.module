  if (isset($uri_chunks[1])) {

    $file_extension = $uri_chunks[1];
    // TODO: This should not be a switch, it should invoke a hook to get stuff back
    switch ($file_extension) {

      case 'zip':
        return spatial_shapefile_get_wkt($uri);

    }

  }
  else {
